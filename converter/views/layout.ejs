<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"><title> Unit Converter </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>
    <div id="page-wrap">
      <header class="main" id="h1">
        <h2>Unit Converter</h2>
      </header>

      <nav class="main" id="n1" role="navigation">
        <span><a href="/">Home</a></span>
      </nav>

      <section class="main" id="s1">
        <div>
          <%- body %>
        </div>
      </section>

      <footer class="main" id="f1">
        <table>
      		<tr><h1>Temperature Conversion Formula</h1></tr>
        	<table border="1" align="center">
          	<tr>
          		<th style="background-color:#f0f0f0;">From</th>
          		<th style="background-color:#f0f0f0;">To</th>
          		<th style="background-color:#f0f0f0;">Formula</th>
          	</tr>
          	<tr>
          		<td>Fahrenheit</td>
          		<td>Celsius</td>
          		<td>ºC = ( ºF - 32) / 1.8</td>
          	</tr>
          	<tr>
          		<td>Celsius</td>
          		<td>Fahrenheit</td>
          		<td>ºF = ºC x 1.8 + 32</td>
          	</tr>
          	<tr>
          		<td>Fahrenheit</td>
          		<td>Kelvin</td>
          		<td>K = ( ºF + 459.67) / 1.8 </td>
          	</tr>
          	<tr>
          		<td>Kelvin</td>
          		<td>Fahrenheit</td>
          		<td>ºF = K × 1.8 - 459.67</td>
          	</tr>
          	<tr>
          		<td>Celsius</td>
          		<td>Kelvin</td>
          		<td>K = ºC + 273.15</td>
          	</tr>
          	<tr>
          		<td>Kelvin</td>
          		<td>Celsius</td>
          		<td>ºC = K – 273.15</td>
          	</tr>
      		</table>

      		<tr>
            <h1>Meter Conversion Formula</h1>
          </tr>

          <table border="1" align="center">
            <tr>
          		<th style="background-color:#f0f0f0;">From</th>
          		<th style="background-color:#f0f0f0;">To</th>
          		<th style="background-color:#f0f0f0;">Formula</th>
        		</tr>
        		<tr>
          		<td>Meter</td>
          		<td>kilometer</td>
          		<td>1 km = 1000 m</td>
        		</tr>
        		<tr>
          		<td>kilometer</td>
          		<td>Meter</td>
          		<td>1 m = 0.001 Km</td>
        		</tr>
        		<tr>
          		<td>Meter</td>
          		<td>Centimeter </td>
          		<td>1 cm = 0.01 m </td>
        		</tr>
        		<tr>
          		<td>Centimeter</td>
          		<td>Meter</td>
          		<td>1m = 100 cm</td>
        		</tr>
        		<tr>
          		<td>kilometer</td>
          		<td>Centimeter</td>
          		<td>1 cm = 0.00001 km</td>
        		</tr>
        		<tr>
          		<td>Centimeter</td>
          		<td>kilometer</td>
          		<td>1 km =100000 cm</td>
        		</tr>
      		</table>
    		</table>
      </footer>
    </div>
  </body>
</html>
